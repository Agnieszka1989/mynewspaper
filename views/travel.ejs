</div>
<div class="jumbotron">
  <% tarticles.forEach(function(tarticle){ %>
  <div class="card newcard" >
  <img src="<%=tarticle.timage%>" class="card-img-top newcardimg" alt="">
  <div class="card-body">
    <h5 class="card-title"><%=tarticle.ttitle%></h5>


    <p class="card-text"><%=tarticle.tbody%></p>
    <hr>
    <p><%=tarticle.tauthor%></p>
    <a href="/tarticle/<%= tarticle._id %>" class="btn btn-primary">Click to Edit or Delete</a>
  </div>
</div>
<% }); %>
</div>

<div class="jumbotron">
<h3 class="text-center"> Add your Article </h3>
<form class="" action="/tarticles/add" method="post">

<input class="form-control form-control-sm" name="timage" type="text" placeholder="Insert image Url">
<input class="form-control form-control-sm" name="ttitle" type="text" placeholder="Insert Title">
<textarea class="form-control form-control-sm" type="text" name="tbody" placeholder="Insert Article"></textarea>
<input class="form-control form-control-sm" type="text" name="tauthor" placeholder="Insert Author">
<button class=" btn btn-outline-success btn-block" type="submit" name="tarticle">+</button>
</form>
</div>


<%- include("partials/footer"); -%>
</div>
