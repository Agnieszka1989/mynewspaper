  </div>

</div>

<div class="jumbotron">
  <% particles.forEach(function(particle){ %>
  <div class="card newcard" >
  <img src="<%=particle.pimage%>" class="card-img-top newcardimg" alt="">
  <div class="card-body">
    <h5 class="card-title"><%=particle.ptitle%></h5>


    <p class="card-text"><%=particle.pbody%></p>
    <hr>
    <p><%=particle.pauthor%></p>
    <a href="/particle/<%= particle._id %>" class="btn btn-primary">Click to Edit or Delete</a>
  </div>
</div>
<% }); %>
</div>

<div class="jumbotron">
<h3 class="text-center"> Add your Article </h3>
<form class="" action="/particles/add" method="post">

<input class="form-control form-control-sm" name="pimage" type="text" placeholder="Insert image Url">
<input class="form-control form-control-sm" name="ptitle" type="text" placeholder="Insert Title">
<textarea class="form-control form-control-sm" type="text" name="pbody" placeholder="Insert Article"></textarea>
<input class="form-control form-control-sm" type="text" name="pauthor" placeholder="Insert Author">
<button class=" btn btn-outline-success btn-block" type="submit" name="particle">+</button>
</form>
</div>

<%- include("partials/footer"); -%>
</div>
