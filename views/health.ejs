<div class="jumbotron">
  <% harticles.forEach(function(harticle){ %>
  <div class="card newcard" >
  <img src="<%=harticle.himage%>" class="card-img-top newcardimg" alt="">
  <div class="card-body">
    <h5 class="card-title"><%=harticle.htitle%></h5>


    <p class="card-text"><%=harticle.hbody%></p>
    <hr>
    <p><%=harticle.hauthor%></p>
    <a href="/harticle/<%= harticle._id %>" class="btn btn-primary">Click to Edit or Delete</a>
  </div>
</div>
<% }); %>
</div>

<div class="jumbotron">
<h3 class="text-center"> Add your Article </h3>
<form class="" action="/harticles/add" method="post">

<input class="form-control form-control-sm" name="himage" type="text" placeholder="Insert image Url">
<input class="form-control form-control-sm" name="htitle" type="text" placeholder="Insert Title">
<textarea class="form-control form-control-sm" type="text" name="hbody" placeholder="Insert Article"></textarea>
<input class="form-control form-control-sm" type="text" name="hauthor" placeholder="Insert Author">
<button class=" btn btn-outline-success btn-block" type="submit" name="harticle">+</button>
</form>
</div>

