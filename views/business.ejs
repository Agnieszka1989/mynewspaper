<div class="jumbotron">
  <% barticles.forEach(function(barticle){ %>
  <div class="card newcard" >
  <img src="<%=barticle.bimage%>" class="card-img-top newcardimg" alt="">
  <div class="card-body">
    <h5 class="card-title"><%=barticle.btitle%></h5>


    <p class="card-text"><%=barticle.bbody%></p>
    <hr>
    <p><%=barticle.bauthor%></p>
    <a href="/barticle/<%= barticle._id %>" class="btn btn-primary">Click to Edit or Delete</a>
  </div>
</div>
<% }); %>
</div>

<div class="jumbotron">
<h3 class="text-center"> Add your Article </h3>
<form class="" action="/barticles/add" method="post">

<input class="form-control form-control-sm" name="bimage" type="text" placeholder="Insert image Url">
<input class="form-control form-control-sm" name="btitle" type="text" placeholder="Insert Title">
<textarea class="form-control form-control-sm" type="text" name="bbody" placeholder="Insert Article"></textarea>
<input class="form-control form-control-sm" type="text" name="bauthor" placeholder="Insert Author">
<button class=" btn btn-outline-success btn-block" type="submit" name="barticle">+</button>
</form>
</div>
<%- include("partials/footer"); -%>

</div>
